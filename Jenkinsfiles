pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'rm -rf /var/www/target' 
                archiveArtifacts artifacts: '/var/www/target/spring-petclinic-*.jar', fingerprint: true
                sh 'mv /var/www/target/spring-petclinic-*.jar /var/www/target/spring-petclinic-prod.jar'
                sh 'sudo chown baeldung:jenkins /var/www/target/spring-petclinic-prod.jar'
                sh 'sudo systemctl restart petclinic'
            }
        }
        stage('Test') {
            steps {
                sh 'make check || true' 
                junit '/var/www/target/*.xml'
            }
        }
        stage('Deploy') {
            steps {
                when {
                    expression {
                        currentBuild.result == null || currentBuild.result == 'SUCCESS' 
                    }
                }
                steps {
                    sh 'make publish'
                }
            }
        }
    }
}